{
  "compilerOptions": {
    "target": "ES2022",                                  
    "module": "commonjs",                                
    "moduleResolution": "Node",
    "allowJs": true,                                    
    "checkJs": true,                                    
    "outDir": "dist",                                   
    "allowSyntheticDefaultImports": true,              
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
